<div id="<%= dom_id asset %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= asset.kind.titleize %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Country:</strong>
    <%= asset.country %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Currency:</strong>
    <%= asset.currency %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= asset.name %>
  </p>

  <% unless asset.description.blank? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= asset.description %>
    </p>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this asset", asset, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this asset", edit_asset_path(asset), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
